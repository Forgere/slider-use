var body = '<%= @text %>';
if(body.indexOf(";") > -1){
  $('.shangchuan').hide();
  popup($('.gongxi'));
  attrs = body.split(";");
  $(".usersshareimg").append("<img src='"+attrs[0]+"' style='width:100%'></img>")
  $(".xuanyan_"+ attrs[1]).show();
}else{
    if(body == "点赞成功"){
      $('.shangchuan').hide();
      $('.shangchuan').hide();
      if(window.action_str){
        $("form#new_upload").attr("action", window.action_str);
      }
      curr = $("span.upload_"+window.tar_str).find('b').text();
      $("span.upload_"+window.tar_str).find('b').text(parseInt(curr) + 1);
      $('.zhezhao').show();
      popup($('.zansuccess'));
    }else{
      if(body !== ""){
        alert(body);
        $("form .big img").trigger('click');
      }
    }
}